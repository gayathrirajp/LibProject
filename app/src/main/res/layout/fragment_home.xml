<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="382dp"
        android:layout_height="255dp"
        android:measureAllChildren="true"
        app:cardCornerRadius="16dp"
        android:colorBackground="#DDDDDD"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.551"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.186">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#626A68">

            <TextView
                android:id="@+id/txtCardPhone"
                android:layout_width="129dp"
                android:layout_height="44dp"
                android:textColor="#ccd0cf"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="36dp"
                android:layout_marginTop="204dp"
                android:layout_marginEnd="217dp"
                android:layout_marginBottom="7dp"
                android:text="Name goes here" />

            <TextView
                android:id="@+id/txtCardName"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:textColor="#ccd0cf"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="218dp"
                android:layout_marginTop="67dp"
                android:layout_marginEnd="9dp"
                android:layout_marginBottom="143dp"
                android:text="Name goes here" />

            <TextView
                android:id="@+id/txtCardBatch"
                android:layout_width="125dp"
                android:layout_height="39dp"
                android:textColor="#ccd0cf"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="221dp"
                android:layout_marginTop="130dp"
                android:layout_marginEnd="36dp"
                android:layout_marginBottom="86dp"
                android:text="Name goes here" />

            <TextView
                android:id="@+id/txtCardBranch"
                android:layout_width="124dp"
                android:textColor="#ccd0cf"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="35dp"
                android:layout_marginTop="122dp"
                android:layout_marginEnd="223dp"
                android:layout_marginBottom="71dp"
                android:text="Name goes here" />

            <TextView
                android:id="@+id/txtCardUsn"
                android:layout_width="123dp"
                android:layout_height="39dp"
                android:textColor="#ccd0cf"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="36dp"
                android:layout_marginTop="68dp"
                android:layout_marginEnd="223dp"
                android:layout_marginBottom="148dp"
                android:text="Name goes here" />

            <TextView
                android:id="@+id/txtCardTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#ccd0cf"
                android:text="  Student Card"
                android:textAlignment="viewStart"
                android:textSize="28dp" />

            <Button
                android:id="@+id/btnChangePassword"
                android:layout_width="182dp"
                android:layout_height="60dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="190dp"
                android:layout_marginTop="182dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="13dp"
                android:background="@drawable/btnstyle"
                android:text="Change password" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="175dp"
        android:layout_height="163dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.808"
        app:srcCompat="@drawable/ic_launcher_foreground" />

</androidx.constraintlayout.widget.ConstraintLayout>